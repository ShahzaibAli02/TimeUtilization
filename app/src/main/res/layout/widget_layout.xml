<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/table_content_cell_bg"
        android:padding="6dp" >


        <TextView
            android:id="@+id/txtpoints"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="00"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/backgroundcolor"
            android:paddingStart="5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            />
        <TextView
            android:id="@+id/textviewActivityName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="No running Activity"
            android:background="@color/backgroundcolor"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:textColor="#DD2D2D"
            android:fontFamily="sans-serif-condensed-medium"
            />
        <TextView
            android:id="@+id/txtActivitypoints"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="00"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/backgroundcolor"
            android:paddingStart="5dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            />

        <TextView
            android:id="@+id/txtviewActivityDuration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="00:00:00"
            android:textSize="15dp"
            android:paddingStart="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/backgroundcolor"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            />

        <TextView
            android:id="@+id/txtviewTotalActivityDuration"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="00:00:00"

            android:paddingStart="5dp"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#E12E2E"
            android:background="@color/backgroundcolor"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-medium"
            />




    </LinearLayout>
    <Button
        android:id="@+id/btnRef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:visibility="gone"
        />

</LinearLayout>